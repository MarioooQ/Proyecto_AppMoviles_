<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_AppMoviles_.PaginaRegistro">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="LogoCentro.png" HorizontalOptions="Center" Scale="0.5" Margin="10,-70,10,-70"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese su correo electrónico" Margin="10,0,10,0"/>
            <Entry x:Name="txtContrasena" IsPassword="True" Placeholder="Ingrese su contrasseña" Margin="10,0,10,0"/>
            <ImageButton Source="LineaDivision.png" HorizontalOptions="CenterAndExpand" Margin="10,50,10,0"/>
            <ImageButton x:Name="btnIngresarGoogle" Clicked="btnIngresarGoogle_Clicked" Source="GoogleLogin.png" Scale="0.7"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>